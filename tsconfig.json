{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES2020",
        "target": "ES2020",
        "jsx": "react",
        "allowJs": false,
        "checkJs": false,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "@module": [
                "./node_modules"
            ]
        },
        "lib": [
            "ES2020", "DOM"
        ],
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationDir": "dist",
    }
}